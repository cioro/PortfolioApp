<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.rmolina16.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/nanogree_text"
        android:text="@string/my_nanodegree_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/popular_movies_button"
        android:text="@string/popular_movies"
        android:onClick="onClick"
        style="@style/ButtonStyle"/>

    <Button
        android:id="@+id/stock_hawk_button"
        android:onClick="onClick"
        android:text="@string/stock_hawk"
        style="@style/ButtonStyle"/>

    <Button
        android:id="@+id/build_it_bigger_button"
        android:onClick="onClick"
        android:text="@string/build_it_bigger"
        style="@style/ButtonStyle"/>

    <Button
        android:id="@+id/make_material_button"
        android:onClick="onClick"
        android:text="@string/make_your_app_material"
        style="@style/ButtonStyle"/>

    <Button
        android:id="@+id/go_ubiquitous_button"
        android:onClick="onClick"
        android:text="@string/go_ubiquitous"
        style="@style/ButtonStyle"/>

    <Button
        android:id="@+id/capstone_button"
        android:onClick="onClick"
        android:text="@string/capstone"
        style="@style/ButtonStyle"/>

</LinearLayout>
